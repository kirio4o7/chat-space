
.message
  .main-message__group
    .main-message__name
      = message.user.name
      .main-message__name-update
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main-message__comment
      - if message.content.present?
        %p.main-message__comment-content
          = message.content
      = image_tag message.image.url, class: 'main-message__comment-image' if message.image.present?